    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
          "type": "node",
          "request": "launch",
          "name": "crawler: Jest All",
          "cwd": "${workspaceFolder}/crawler",
          "env": {
              "DEBUG": "1"
          },
          "program": "${workspaceFolder}/crawler/node_modules/.bin/jest",
          "args": [
              "--runInBand",
            ],
          "console": "integratedTerminal",
          "internalConsoleOptions": "neverOpen",
          "disableOptimisticBPs": true
        },
        {
          "type": "node",
          "request": "launch",
          "name": "crawler: Jest Current File",
          "cwd": "${workspaceFolder}/crawler",
          "env": {
              "DEBUG": "1"
          },
          "program": "${workspaceFolder}/crawler/node_modules/.bin/jest",
          "args": [
            "${fileBasenameNoExtension}",
          ],
          "console": "integratedTerminal",
          "internalConsoleOptions": "neverOpen",
          "disableOptimisticBPs": true
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Crawl organizations",
            "program": "${workspaceFolder}/crawler/run.js",
            "cwd": "${workspaceFolder}",
            "env": {
                "DEBUG": "1"
            },
            "args": [
                "--orgs",
                "--commit-to=index/v1",
                "--commit-orgs-to=cfapi/orgs/v1",
                // "--orgs-source=https://raw.githubusercontent.com/themightychris/brigade-information/master/organizations.json"
            ],
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Crawl projects",
            "program": "${workspaceFolder}/crawler/run.js",
            "cwd": "${workspaceFolder}",
            "env": {
                "DEBUG": "1"
            },
            "args": [
                "--projects",
                "--commit-to=index/v1",
                "--commit-orgs-to=cfapi/orgs/v1"
            ],
            "env": {
                "GITHUB_ACTOR": "${input:githubActor}",
                "GITHUB_TOKEN": "${input:githubToken}"
            },
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Crawl all",
            "program": "${workspaceFolder}/crawler/run.js",
            "cwd": "${workspaceFolder}",
            "env": {
                "DEBUG": "1"
            },
            "args": [
                "--all",
                "--commit-to=index/v1",
                "--commit-orgs-to=cfapi/orgs/v1",
                // "--orgs-source=https://raw.githubusercontent.com/themightychris/brigade-information/master/organizations.json"
            ],
            "env": {
                "GITHUB_ACTOR": "${input:githubActor}",
                "GITHUB_TOKEN": "${input:githubToken}"
            },
            "skipFiles": [
                "<node_internals>/**"
            ]
        }
    ],
    "inputs": [
        {
            "id": "githubActor",
            "type": "promptString",
            "description": "GitHub Username",
            "default": ""
        },
        {
            "id": "githubToken",
            "type": "promptString",
            "description": "GitHub Personal Access Token",
            "default": ""
        }
    ]
}