{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Crawler: Jest All",
            "cwd": "${workspaceFolder}/crawler",
            "env": {
                "DEBUG": "1",
                "GITHUB_ACTOR": "${input:githubActor}",
                "GITHUB_TOKEN": "${input:githubToken}",
            },
            "program": "${workspaceFolder}/crawler/node_modules/.bin/jest",
            "args": [
                "--runInBand",
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "disableOptimisticBPs": true
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Crawler: Jest Current File",
            "cwd": "${workspaceFolder}/crawler",
            "env": {
                "DEBUG": "1",
                "GITHUB_ACTOR": "${input:githubActor}",
                "GITHUB_TOKEN": "${input:githubToken}",
            },
            "program": "${workspaceFolder}/crawler/node_modules/.bin/jest",
            "args": [
                "${fileBasenameNoExtension}",
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "disableOptimisticBPs": true
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Crawl organizations",
            "program": "${workspaceFolder}/crawler/run.js",
            "cwd": "${workspaceFolder}",
            "env": {
                "DEBUG": "1"
            },
            "args": [
                "--orgs",
                "--commit-to=index/v1",
                "--commit-orgs-to=cfapi/orgs/v1",
                "--orgs-source=https://gist.githubusercontent.com/themightychris/192929e226f7077d0b08013fcda81952/raw/ffe6fcecea0d84f8317d5fc1a4c57cb136d580d3/test-organizations.json"
            ],
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Crawl projects",
            "program": "${workspaceFolder}/crawler/run.js",
            "cwd": "${workspaceFolder}",
            "env": {
                "DEBUG": "1",
                "GITHUB_ACTOR": "${input:githubActor}",
                "GITHUB_TOKEN": "${input:githubToken}"
            },
            "args": [
                "--projects",
                "--commit-to=index/v1",
                "--commit-orgs-to=cfapi/orgs/v1"
            ],
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Crawl all",
            "program": "${workspaceFolder}/crawler/run.js",
            "cwd": "${workspaceFolder}",
            "env": {
                "DEBUG": "1",
                "GITHUB_ACTOR": "${input:githubActor}",
                "GITHUB_TOKEN": "${input:githubToken}"
            },
            "args": [
                "--all",
                "--commit-to=index/v1",
                "--commit-orgs-to=cfapi/orgs/v1",
                "--orgs-source=https://gist.githubusercontent.com/themightychris/192929e226f7077d0b08013fcda81952/raw/ffe6fcecea0d84f8317d5fc1a4c57cb136d580d3/test-organizations.json"
            ],
            "skipFiles": [
                "<node_internals>/**"
            ]
        }
    ],
    "inputs": [
        {
            "id": "githubActor",
            "type": "promptString",
            "description": "GitHub Username",
            "default": ""
        },
        {
            "id": "githubToken",
            "type": "promptString",
            "description": "GitHub Personal Access Token",
            "default": ""
        }
    ]
}